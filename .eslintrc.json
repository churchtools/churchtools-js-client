{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "root": true,
    "parserOptions": {
        "sourceType": "module"
    },
    "globals": {
        "test": true,
        "beforeEach": true,
        "afterEach": true,
        "jest": true,
        "expect": true,
        "describe": true,
        "require": true,
        "globalThis": true
    },
    "rules": {
        "@typescript-eslint/no-explicit-any": "warn",
        "@typescript-eslint/ban-ts-comment": "warn",
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "max-len": ["error", 120],
        "no-console": "off"
    }
}
